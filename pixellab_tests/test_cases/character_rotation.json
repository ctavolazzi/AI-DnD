{
  "endpoint": "character_rotation",
  "description": "Test character rotation to all 8 directions",
  "test_cases": [
    {
      "id": "knight_rotation_4dir",
      "name": "Knight - 4 Cardinal Directions",
      "inputs": {
        "base_character": {
          "prompt": "heroic knight with sword",
          "width": 64,
          "height": 64,
          "seed": 12345
        },
        "rotations": [
          {"to_direction": "north", "from_direction": "south"},
          {"to_direction": "east", "from_direction": "south"},
          {"to_direction": "west", "from_direction": "south"}
        ]
      },
      "expected": {
        "status": "success",
        "image_size": [64, 64],
        "min_duration": 5.0,
        "max_duration": 20.0
      },
      "baseline": "baselines/character_rotation/knight_4dir/"
    },
    {
